#include <stdio.h>
void year(int x) {// функция берет число годов
    int f;// флаг 0 1 и 2
    if ((x%10==1)&&(x!=11)) f=1;// число оканчивается на 1 кроме 11
    else if ((x%10>1)&&(x%10<5)&&((x>20)||(x<10))) f=2;// единицы числа принадлежат промежутку [2;4]
    else f = 0;// иначе единицы числа это 0 или принадлежат промежутку [5;9]
    switch (f) {
        case 0:
            printf("%d лет\n", x);
            break;
        case 1:
            printf("%d год\n", x);
            break;
        default:
            printf("%d года\n", x);}}//возвращает флаг(нужно для того чтобы вывести правильное слово)
int input(){
    int a,f;
    char c;
    do{
        printf ("Введите число: ");
        f=1;
        scanf ("%d",&a);
        while ((c=getchar ())!='\n'){
            if ((c>'9'||c<'0')&&c!='\n' ) f=0;}
        if (f==0) printf ("Вводите цифры, не символы \n");
        else if(a<1||a>100)printf("Вводите положительные, натуральные числа в промежутке [1;100](вряд-ли вам больше:])\n");
        }while (a<1||a>100||f==0);
    return  a;}
int main() {
    int a;
    a=input();
    printf("Ваш возраст ");
    year(a);
    if (a==18)printf("Вы совершеннолетний(яя)");
    else if (a<18){ printf("Вам до совершеннолетия ");year((18-a));}
    else { printf("Вы совершеннолетний(яя) ");year((a-18));}
    if (a==60)printf("Вы пенсионер(ка)");
    else if (a<60){ printf("Вам до пенсии ");year((60-a));}
    else { printf("Вы на пенсии ");year((a-60));}
    return 0;}
